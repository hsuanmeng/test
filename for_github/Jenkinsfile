pipeline{
    agent none
    stages {
        stage('distribute'){
              parallel{
                    stage('166'){
                        when{expression{/*如果測試失敗，狀態為UNSTABLE*/
                            currentBuild.result == null || currentBuild.result == 'SUCCESS'}}
                        agent{ node {
                                label 'testingEnv'
                                customWorkspace '/data/workspace/'
                                }
                             }
                        steps {
                            echo "Test On 166"
                            sh 'whoami'
                            sh 'pip install -r /data/workspace/requirements.txt'
                        }
                    }
                    stage('165'){
                        agent{node {
                                label 'testingEnv1'
                                customWorkspace '/data/workspace/'
                                }}
                    steps {
                        echo "Test On 165"
                        echo "install package"
                        sh 'whoami'
                        //sh 'pip install -r /data/workspace/requirements.txt'
                        }
                        }
                    }
               }

        stage('Test'){
            steps{
                mail(
                    to:'hsuanmeng@pershing.com.tw',
                    subject: "SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                    body: """SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':
                    Check console output at "${env.BUILD_URL}"${env.JOB_NAME} [${env.BUILD_NUMBER}]"""
                )
            }
        }
    }

    post {
        always {
          echo 'This will always run'
        }
        success {
          hipchatSend(color: 'GREEN', message: 'OK')
        }
        failure {
          hipchatSend(color: 'RED', message: 'FAIL')
        }
        unstable {
         hipchatSend(color: 'YELLOW', message: 'UNSTABLE')
        }
    }

}
